  </tr>
  <tr>
    <td>Estilo de Pensamiento COGNITIVO </td>
    <td>A + D </td>
    <td>Cerebral </td>
    <td><%= @puntaje_cognitivo %></td>
  </tr>
  <tr>
    <td>Estilo de Pensamiento INSTINTIVO </td>
    <td>B + C </td>
