    <th>Fórmula</th>
    <th>Descripción</th>
    <th>Puntaje</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td>Estilo Lógico </td>
    <td>A </td>
    <td>Izquierdo Inferior </td>
    <td><%= @puntaje_logico %></td>
  </tr>
  <tr>
    <td>Estilo Formal </td>
    <td>B </td>
    <td>Derecho Inferior </td>
    <td><%= @puntaje_formal %></td>
  </tr>
  <tr>
    <td>Estilo Emotivo </td>
    <td>C </td>
    <td>Derecho Superior </td>
    <td><%= @puntaje_emotivo %></td>
  </tr>
  <tr>
    <td>Estilo Intuitivo </td>
    <td>D </td>
    <td>Izquierdo Superior </td>
