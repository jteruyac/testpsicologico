      <p>
         <h3>
            <%= contador.to_s %>. <a href="#" onclick="var bloque = new Fx.Slide('div_prueba_<%= prueba.id.to_s %>');bloque.toggle();return false;"><%= prueba.nombre %></a> [<%= link_to  "Rendir", :controller => "evaluacions", :action => "new", :prueba => prueba.id %>]
