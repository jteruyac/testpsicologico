<% if ((session["usuario"])&&(!session["usuario"].administrador)) %>

<%= stylesheet_link_tag 'sexyalertbox.css' %>
<%= javascript_include_tag 'frameworks/mootools-1.2-core.js' %>
<%= javascript_include_tag 'frameworks/mootools-1.2-more.js' %>
