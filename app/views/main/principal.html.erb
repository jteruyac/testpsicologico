                <%=  evl.fecha.strftime("%d/%m/%Y") %> (<%= link_to  "Ver", :controller => "evaluacions", :action => "resultado", :evaluacion => evl.id %>)
              </li>
              <% end %>
            </ul>
            <br />
          <% end %>
      </div>
      <script type="text/javascript">
          var bloque = new Fx.Slide('div_prueba_<%= prueba.id.to_s %>');
          bloque.hide();
      </script>
    
  <% end %>

  <br />
<%else%>
<%= render :partial => "unauthorized" %>
<%end%>